<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_payment_mode_form_inherit" model="ir.ui.view">
      <field name="name">payment.mode.form.inherit</field>
      <field name="model">payment.mode</field>
      <field name="inherit_id" ref="l10n_br_account_payment_mode.view_payment_mode_form_inherit"/>
      <field name="arch" type="xml">
        <xpath expr="//group[@name='l10n-br-config']/notebook/page[@string='Boleto']"
               position="inside">
          <group>
            <field name="boleto_type"/>
            <field name="boleto_tipo_documento" />
            <field name="boleto_convenio" />
            <field name="boleto_carteira"/>
            <field name="boleto_modalidade"/>
            <field name="boleto_variacao"/>
            <field name="boleto_cnab_code" />
            <field name="boleto_aceite"/>
            <field name="boleto_especie"/>
            <field name="boleto_protesto"/>
            <field name="boleto_protesto_prazo" attrs="{'invisible': [('boleto_protesto', '==', '0')],
                                                    'required': [('boleto_protesto', '!=', '0')]}"/>
            <field name="boleto_baixa"/>
            <field name="boleto_baixa_prazo" attrs="{'invisible': [('boleto_baixa', '==', '2')],
                                                    'required': [('boleto_baixa', '!=', '2')]}"/>
            <field name="boleto_mora"/>
            <field name="boleto_mora_juros" attrs="{'invisible': [('boleto_mora', '==', '3')],
                                                    'required': [('boleto_mora', '!=', '3')]}"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</openerp>